{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types/*.d.ts", "@types", "node_modules/@types"],
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@modules/*": ["src/modules/*"]
    }
  }
}
