{
  "name": "classtimes",
  "version": "1.0",
  "description": "ClassTimes.app Calendar Server",
  "author": "Classtimes",
  "private": false,
  "license": "Copyright Classtimes 2021",
  "typings": "*.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:original": "nest start",
    "start:dev": "nest start --watch",
    "start": "yarn run start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:create": "sh -c 'ts-node node_modules/.bin/migrate-mongo create $0 -f migrate-mongo-config.ts' ",
    "migrate:status": "ts-node node_modules/.bin/migrate-mongo status -f migrate-mongo-config.ts",
    "migrate:undo-last": "ts-node node_modules/.bin/migrate-mongo down -f migrate-mongo-config.ts && npm run migrate:status",
    "migrate": "ts-node node_modules/.bin/migrate-mongo up -f migrate-mongo-config.ts"
  },
  "dependencies": {
    "@anchan828/nest-sendgrid": "^0.6.0",
    "@apollo/gateway": "^2.0.5",
    "@casl/ability": "^5.2.2",
    "@casl/mongoose": "^6.0.0",
    "@nestjs/apollo": "^10.0.17",
    "@nestjs/common": "^9.0.1",
    "@nestjs/core": "^9.0.1",
    "@nestjs/graphql": "^10.0.18",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.13",
    "apollo-error-converter": "^1.1.1",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.9.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "git-commit-info": "^2.0.0",
    "git-last-commit": "^1.0.0",
    "graphql": "^16.5.0",
    "graphql-tools": "^7.0.4",
    "imagekit": "^3.1.2",
    "js-base64": "^3.6.0",
    "mongoose": "^6.4.4",
    "mongoose-autopopulate": "^0.16.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rrule": "^2.6.8",
    "rxjs": "^7.5.5",
    "titleize": "^2.1.0",
    "type-fest": "^0.21.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@testing-library/react": "^11.2.5",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.37",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "migrate-mongo": "^8.2.2",
    "mongodb-memory-server": "^6.9.6",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^9.3.1",
    "ts-morph": "^15.1.0",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@entities/(.*)$": "<rootDir>/src/entities/$1"
    }
  }
}
